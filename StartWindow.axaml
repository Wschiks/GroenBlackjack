<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Game"
        Width="1512"
        Height="982"
        x:Class="avaloniaAppGroen.StartWindow">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Select number of players:" Margin="0,0,0,10" />
        
        
        <Slider x:Name="PlayersSlider" Minimum="1" Maximum="4" Value="1" TickFrequency="1"
                IsSnapToTickEnabled="True" Width="200"/>
        
        
        <TextBlock x:Name="PlayersText" Text="Players: 1" Margin="0,10,0,10" />
        
        <Button Content="Start Game" Click="StartGame_Click" />
    </StackPanel>
</Window>